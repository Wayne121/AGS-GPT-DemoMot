<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/moy4"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_alignRight="@+id/txtViewOne"
        android:layout_below="@+id/txtViewOne"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/year4"
        app:layout_constraintTop_toBottomOf="@+id/moy3"
        android:maxLength="4"/>

    <TextView
        android:id="@+id/year4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:text="4ème Année : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year3" />

    <TextView
        android:id="@+id/moy3"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_alignRight="@+id/txtViewOne"
        android:layout_below="@+id/txtViewOne"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/year3"
        app:layout_constraintTop_toBottomOf="@+id/moy2"
        android:maxLength="4"/>

    <TextView
        android:id="@+id/year3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:text="3ème Année : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year2" />

    <TextView
        android:id="@+id/year2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="33dp"
        android:text="2ème Année : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year1" />

    <TextView
        android:id="@+id/moy2"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_alignRight="@+id/txtViewOne"
        android:layout_below="@+id/txtViewOne"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/year2"
        app:layout_constraintTop_toBottomOf="@+id/moy1"
        android:maxLength="4"/>

    <TextView
        android:id="@+id/moy1"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_alignRight="@+id/txtViewOne"
        android:layout_below="@+id/txtViewOne"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/year1"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:maxLength="4" />


    <TextView
        android:id="@+id/year1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="32dp"
        android:text="1ère Année : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />
</android.support.constraint.ConstraintLayout>